{
  "compilerOptions": {
    // "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "target": "es5",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/app/*": ["app/*"],
      "@/components/*": ["components/*"],
      "@/utils/*": ["utils/*"],
      "@/layout/*": ["layout/*"],
      "@/pages/*": ["pages/*"],
      "@/scripts/*": ["scripts/*"],
      "@/types/*": ["types/*"],
      "@/stories/*": ["stories/*"],
      "@/constants/*": ["constants/*"]
    }
  },
  "exclude": [
    "node_modules",
    ".next",
    "out"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"
  ]
}